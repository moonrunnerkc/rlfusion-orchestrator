# RLFusion Environment Variables
# Copy this file to .env and fill in your values

# Tavily Web Search API Key (optional - only needed if web search is enabled)
# Get your key at https://tavily.com
TAVILY_API_KEY=

# Device configuration (optional)
# Options: "cpu" or "cuda"
# Default: "cpu"
RLFUSION_DEVICE=cpu

# Force CPU mode even if CUDA is available (optional)
# Set to "true" to disable GPU
RLFUSION_FORCE_CPU=false

# Ollama LLM host (optional)
# Default: http://localhost:11434
OLLAMA_HOST=http://localhost:11434
